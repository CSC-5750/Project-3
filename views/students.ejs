<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Registered Students</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="outer-container">
    <h1>Registered Students</h1>
    
    <!-- Table container for styling the box around the table -->
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>PROJECT TITLE</th>
            <th>EMAIL</th>
            <th>PHONE</th>
            <th>TIME SLOT</th>
            <th>ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(student => { %>
            <tr>
              <td><%= student.id %></td>
              <td><%= student.first_name %> <%= student.last_name %></td>
              <td><%= student.project_title %></td>
              <td><%= student.email %></td>
              <td><%= student.phone %></td>
              <td><%= student.time_slot %></td>
              <td>
                <form action="/delete" method="POST" style="display:inline;">
                  <input type="hidden" name="id" value="<%= student.id %>">
                  <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this student?');">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="back-btn-container">
      <a href="/">
        <button type="button" class="back-button">Back to Registration</button>
      </a>
    </div>
  </div>
</body>
</html>
